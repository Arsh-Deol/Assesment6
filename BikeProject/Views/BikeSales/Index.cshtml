@model IEnumerable<BikeProject.Models.BikeSale>

@{
    ViewData["Title"] = "Index";
}

<h1>Total Sale</h1>

<p>
    <a asp-action="Create">Add Sale</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Purchaser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Banch)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Purchaser.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Banch.BranchName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
